<UserControl x:Class="MvvmSnake.Views.Board"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Border BorderBrush="Black" BorderThickness="2">
        <Grid x:Name="boardGrid" ShowGridLines="True">
            <ItemsControl ItemsSource="{Binding Snake, Converter={StaticResource MyDebugConverter}}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- Use a UniformGrid instead to ensure shared layout -->
                        <UniformGrid Rows="{Binding BoardSize, Converter={StaticResource MyDebugConverter}}" Columns="{Binding BoardSize, Converter={StaticResource MyDebugConverter}}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Rectangle Fill="{Binding Color}" Grid.Row="{Binding Row}" Grid.Column="{Binding Column}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>
